@model BankaEditDto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <div class="card">
            <form id="registerFormValidation" action="" method="post" novalidate="">
                <div class="card-header">
                    <input type="hidden" asp-for="Id" />
                    <h4 class="card-title">
                        <b>Banka Bilgileri</b>
                    </h4>
                </div>
                <div class="card-content">
                    <div class="form-group">
                        <label asp-for="Kod" class="control-label">Kod <star>*</star></label>
                        <input class="form-control"
                               asp-for="Kod"
                               name="Kod"
                               id="registerKod"
                               type="text"
                               required="true"
                               autocomplete="off" />
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="BankaAdi" class="control-label">Banka Adı <star>*</star></label>
                                <input class="form-control"
                                       asp-for="BankaAdi"
                                       name="BankaAdi"
                                       id="registerBankaAdi"
                                       type="text"
                                       required="true" />
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Yetkili" class="control-label">Banka Şube </label>
                                <input class="form-control"
                                       asp-for="BankaSube"
                                       name="BankaSube"
                                       id="BankaSube"
                                       type="text" />
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="HesapNo" class="control-label">Hesap No </label>
                                <input class="form-control"
                                       asp-for="HesapNo"
                                       name="HesapNo"
                                       id="HesapNo"
                                       type="text" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="IbanNo" class="control-label">IBAN No </label>
                                <input class="form-control"
                                       asp-for="IbanNo"
                                       name="IbanNo"
                                       id="IbanNo"
                                       type="text" />
                            </div>

                        </div>
                    </div>


                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Yetkili" class="control-label">Yetkili </label>
                                <input class="form-control"
                                       asp-for="Yetkili"
                                       name="Yetkili"
                                       id="Yetkili"
                                       type="text" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Telefon" class="control-label">Telefon </label>
                                <input class="form-control"
                                       asp-for="Telefon"
                                       name="Telefon"
                                       id="Telefon"
                                       type="text" />
                            </div>

                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Faks" class="control-label">Faks </label>
                                <input class="form-control"
                                       asp-for="Faks"
                                       name="Faks"
                                       id="Faks"
                                       type="text" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="OzelKod1Id" class="control-label">Özel Kod Adı <star>*</star></label>
                                <select asp-for="OzelKod1Id" class="selectpicker"
                                        data-style="btn btn-default btn-block"
                                        title="Özel Kod Seçiniz" data-size="7"
                                        asp-items="ViewBag.BankaOzelKodlar">
                                </select>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email" class="control-label">E-Mail </label>
                                <input class="form-control"
                                       asp-for="Email"
                                       name="Email"
                                       id="Email"
                                       type="text" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Web" class="control-label">Web </label>
                                <input class="form-control"
                                       asp-for="Web"
                                       name="Web"
                                       id="Web"
                                       type="text" />
                            </div>

                        </div>
                    </div>


                    <div class="form-group">
                        <label asp-for="Aciklama" class="control-label">Açıklama </label>
                        <input class="form-control"
                               asp-for="Aciklama"
                               name="Aciklama"
                               id="registerAciklama"
                               type="text" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Durum" class="control-label">Aktif / Pasif </label>
                        <input asp-for="Durum" type="checkbox" class="switch-icon" checked>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Bakiye" class="control-label">Bakiye </label>
                                <input class="form-control"
                                       asp-for="Bakiye"
                                       name="Bakiye"
                                       id="Bakiye"
                                       type="text"
                                       disabled="disabled" />
                            </div>
                        </div>
                        <div class="col-md-6">
                        </div>
                    </div>

                    <div class="category"><star>*</star> Zorunlu Alan</div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="mr-2 btn btn-danger btn-fill pull-right">Kaydet</button>
                    <a asp-controller="Banka" asp-action="Index" class="mr-2 btn btn-default btn-fill pull-right">Vazgeç</a>
                    <div class="clearfix"></div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-3">
    </div>

</div>

@section Scripts {

    <script type="text/javascript">
        $().ready(function () {
            $('#registerFormValidation').validate();
            $('#loginFormValidation').validate();
            $('#allInputsFormValidation').validate();
        });
    </script>

}


