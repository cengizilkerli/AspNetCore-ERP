@model KasaEditDto

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-3">
    </div>
    <div class="col-md-6">
        <div class="card">
            <form id="registerFormValidation" action="" method="post" novalidate="">
                <div class="card-header">
                    <input type="hidden" asp-for="Id" />
                    <h4 class="card-title">
                        <b>Kasa Bilgileri</b>
                    </h4>
                </div>
                <div class="card-content">
                    <div class="form-group">
                        <label asp-for="Kod" class="control-label">Kod <star>*</star></label>
                        <input class="form-control"
                               asp-for="Kod"
                               name="Kod"
                               id="registerKod"
                               type="text"
                               required="true"
                               autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label asp-for="KasaAdi" class="control-label">Kasa Adı <star>*</star></label>
                        <input class="form-control"
                               asp-for="KasaAdi"
                               name="KasaAdi"
                               id="registerKasaAdi"
                               type="text"
                               required="true" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Yetkili" class="control-label">Yetkili </label>
                        <input class="form-control"
                               asp-for="Yetkili"
                               name="Yetkili"
                               id="registerYetkili"
                               type="text" />
                    </div>

                    <div class="form-group">
                        <label asp-for="OzelKod1Id" class="control-label">Özel Kod Adı <star>*</star></label>
                        <select asp-for="OzelKod1Id" class="selectpicker"
                                data-style="btn btn-default btn-block"
                                title="Özel Kod Seçiniz" data-size="7"
                                asp-items="ViewBag.KasaOzelKodlar">
                        </select>
                    </div>

                    <div class="form-group">
                        <label asp-for="Aciklama" class="control-label">Açıklama </label>
                        <input class="form-control"
                               asp-for="Aciklama"
                               name="Aciklama"
                               id="registerAciklama"
                               type="text" />
                    </div>
                    <div class="form-group">
                        <label asp-for="Durum" class="control-label">Aktif / Pasif </label>
                        <input asp-for="Durum" type="checkbox" class="switch-icon" checked>
                    </div>
                    <div class="category"><star>*</star> Zorunlu Alan</div>
                </div>
                <div class="card-footer">
                    <button type="submit" class="mr-2 btn btn-danger btn-fill pull-right">Kaydet</button>
                    <a asp-controller="Kasa" asp-action="Index" class="mr-2 btn btn-default btn-fill pull-right">Vazgeç</a>
                    <div class="clearfix"></div>
                </div>
            </form>
        </div>
    </div>
    <div class="col-md-3">
    </div>

</div>

@section Scripts {

    <script type="text/javascript">
        $().ready(function () {
            $('#registerFormValidation').validate();
            $('#loginFormValidation').validate();
            $('#allInputsFormValidation').validate();
        });
    </script>

}


